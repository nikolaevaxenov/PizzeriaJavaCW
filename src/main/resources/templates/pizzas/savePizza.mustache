{{>layout/header}}
{{>layout/nav}}
<div class="container">
    <div class="col-md-12">
        <h1>Регистрация Пиццы</h1>
        <div class="col-md-4">
            <form method="get">
                <div class="form-group">
                    <label for="pizza_name">Название Пиццы</label>
                    <input type="text" class="form-control" id="pizza_name" placeholder="Пожалуйста, введите название Пиццы">
                </div>
                <div class="form-group">
                    <label for="pizza_price">Цена</label>
                    <input type="text" class="form-control" id="pizza_price" placeholder="Пожалуйста, введите цену">
                </div>
                <div class="form-group">
                    <label for="pizza_count">Количество</label>
                    <input type="text" class="form-control" id="pizza_count" placeholder="Пожалуйста, введите количество">
                </div>
            </form>
            <a href="/" role="button" class="btn btn-outline-danger">Отменить</a>
            <button type="button" class="btn btn-outline-secondary" id="btn-pizzasSave">Сохранить</button>
        </div>
    </div>
</div>
{{>layout/footer}}