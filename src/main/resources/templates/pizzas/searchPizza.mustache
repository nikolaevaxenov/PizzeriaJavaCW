{{>layout/header}}
{{>layout/nav}}
<div class="container col-md-4">
    <div class="input-group mb-3">
        <input class="form-control" type="text" id="search" placeholder="Пожалуйста введите что-нибудь."/>
        <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="button" id="btn-searchpizza">Поиск</button>
        </div>
    </div>
</div>
<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            {{#pizzaInfo}}
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <h4 class="card-text">{{pizzaName}}</h4>
                            </div>
                            <div class="mb-2 d-flex align-items-center flex-row-reverse">
                                <h5 class="card-text mr-2 float-right">
                                    {{pizzaPrice}}р
                                </h5>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <button type="button" onclick="location.href='/pizzas/pizzadetail?uid={{uid}}'" class="btn btn-sm btn-outline-secondary">Посмотреть детали</button>
                                    <button type="button" onclick="location.href='/pizzas/pizzaupdate?uid={{uid}}'" class="btn btn-sm btn-outline-secondary"> Изменить</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {{/pizzaInfo}}
        </div>
    </div>
</div>
{{>layout/footer}}