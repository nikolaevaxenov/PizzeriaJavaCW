{{>layout/header}}
{{>layout/nav}}
<div class="container">
    <div class="col-md-10">
        <h1>
            Модификация Пиццы</h1>
        <div class="col-md-10">
            {{#pizzaInfo}}
                <form method="post">
                    <div class="form-group">
                        <label for="pizza_name">Название Пиццы</label>
                        <input type="text" class="form-control" id="pizza_name" value="{{pizzaName}}" placeholder="Пожалуйста, введите название Пиццы">
                    </div>
                    <div class="form-group">
                        <label for="pizza_price">
                            цена</label>
                        <input type="text" class="form-control" id="pizza_price" value="{{pizzaPrice}}" placeholder="Пожалуйста, введите цену">
                    </div>
                    <div class="form-group">
                        <label for="pizza_count">
                            Количество</label>
                        <input type="text" class="form-control" id="pizza_count" value="{{pizzaCount}}" placeholder="Пожалуйста, введите количество">
                    </div>
                </form>
                <a href="/" role="button" class="btn btn-outline-danger">
                    отменить</a>
                <button type="button" class="btn btn-outline-secondary" id="btn-pizzasUpdate">Изменения завершены</button>
            {{/pizzaInfo}}
        </div>
    </div>
</div>
{{>layout/footer}}